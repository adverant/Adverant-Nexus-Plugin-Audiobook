# Audiobook Configuration

# Required
NEXUS_API_URL=https://api.adverant.ai
PORT=9101
WS_PORT=9102

# Database
DATABASE_URL=postgresql://nexus:nexus@localhost:5432/nexus

# TTS Providers
ELEVENLABS_API_KEY=
XTTS_BASE_URL=http://localhost:8000
PLAYHT_API_KEY=
PLAYHT_USER_ID=

# Audio Settings
AUDIO_NORMALIZATION_LUFS=-23
AUDIO_SAMPLE_RATE=44100
AUDIO_BITRATE=128k

# Storage
AUDIO_OUTPUT_DIR=/tmp/audiobook/output
AUDIO_TEMP_DIR=/tmp/audiobook/temp

# Optional
LOG_LEVEL=info
MAX_CONCURRENT_TTS=10
BATCH_SIZE=10
